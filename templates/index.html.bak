<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help Me QR</title>
    <style>
        body {
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        #qrcode {
            margin-top: 20px;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            min-width: 260px;
            min-height: 260px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        h1 {
            color: #333;
        }
        p {
            color: #666;
            text-align: center;
            max-width: 400px;
        }
        .help-message {
            font-size: 2em;
            color: red;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Scan This Code For Help</h1>
    <p>If you are in danger, discreetly show this screen to a trusted person or someone who can assist.</p>
    <div id="qrcode"></div>
    <p class="help-message">HELP ME</p>

    <script src="/static/qrcode.min.js"></script>
    <script>
        // The message encoded in the QR code. This placeholder will be replaced by run.sh
        var qrCodeMessage = "###PHONE_NUMBER_PLACEHOLDER###";

        // Create a new QRCode instance
        if (typeof QRCode !== 'undefined') {
            var qrcodeContainer = document.getElementById("qrcode");
            new QRCode(qrcodeContainer, {
                text: qrCodeMessage,
                width: 256,
                height: 256,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H // High error correction
            });
        } else {
            // This message should ideally not appear if the script loads correctly
            document.getElementById("qrcode").innerHTML = "<p style='color: red;'>QR code generator not loaded. Ensure /static/qrcode.min.js is accessible and served with correct MIME type (application/javascript).</p>";
            console.error("QRCode library not found or failed to load. Check network requests and console for errors.");
        }
    </script>
</body>
</html>
